#board.ui.vertical.stripe.segment
  .ui.container
    %h2.headline=t(:board_headline) 

  .ui.text.container
    .epigraph
      %blockquote.dropcap= get_text('Board')

  .ui.container
    .ui.three.column.doubling.stackable.grid
      - blog("board").articles.each_with_index do |m, i|
        .column.member
          .overlay.frame.raised
            .image
              = image_tag(m.data.thumbnail, {:id => "expand-jump-#{i}", :class => "ui image"})
            .content.left
              .head
                .title= m.data.title
              .description= m.render(:layout => false)
              .extra
                %a{:href => "mailto:#{m.data.email}"}
                  %i.ui.mail.icon
                  = m.data.email
