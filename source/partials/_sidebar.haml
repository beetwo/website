#sidebar.ui.vertical.right.overlay.menu.sidebar
  - data.en.menu.each do |m|
    %a.item{:href => m.href}= m.title

  .item
    .ui.grid
      .three.column.row
        .column
          %a.ui.circular.large.icon.button{:href => "#{data.en.contact.mapLink}", :target => "_blank"}
            %i.ui.marker.icon
        .column
          %a.ui.circular.large.icon.button{:href => "mailto:#{data.en.contact.email}"}
            %i.ui.mail.icon
        .column
          %a.ui.circular.large.icon.button{:href => "#{data.en.contact.twitter_link}", :target => "_blank"}
            %i.ui.twitter.icon
